<form action="#" method="post" class="contact-form">
    <div class="input-group">
        <label for="name">Nombre</label>
        <input type="text" id="name" name="name" placeholder="Ingresa tu nombre" required>
    </div>
    <div class="input-group">
        <label for="email">Correo electrónico</label>
        <input type="email" id="email" name="email" placeholder="Ingresa tu correo" required>
    </div>
    <div class="input-group">
        <label for="subject">Asunto</label>
        <input type="text" id="subject" name="subject" placeholder="Motivo del mensaje" required>
    </div>
    <div class="input-group">
        <label for="message">Mensaje</label>
        <textarea id="message" name="message" rows="5" placeholder="Escribe tu mensaje aquí..." required></textarea>
    </div>
    <button type="submit" class="page-btn">Enviar mensaje <i class="fi fi-rr-paper-plane"></i></button>
</form>